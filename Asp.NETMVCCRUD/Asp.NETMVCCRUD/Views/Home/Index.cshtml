
@{
    ViewBag.Title = "Home";
    var fullName = Session["FullName"] as string;
}
<h3>Bienvenido/a:<strong>@fullName</strong> </h3>
<hr />

    <div class="col-lg-12 col-xs-12">
        <p style="font-weight: bold;font-size: x-large;">Menu principal </p>
        <hr style="border-color: #f6ae0f;margin-top: 0px;">
    </div>

    <div class="container">
        <div class="row">
            <!-- Caja 1 -->
            <div class="col-lg-3 col-xs-6">
                <div class="panel panel-success">
                    <div class="panel-heading text-center">
                        <h3 class="panel-title"><strong>Clientes</strong></h3>
                    </div>
                    <div class="panel-body text-center">
                        <i class="fa fa-users fa-3x" aria-hidden="true"></i>
                        <p><strong>Administrar Clientes</strong></p>
                    </div>
                    <div class="panel-footer text-center">
                        <a href="@Url.Action("Index", "Cliente")" class="btn btn-success">
                            <i class="fa fa-users"></i>   Más info
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-xs-6">
                <div class="panel panel-info">
                    <div class="panel-heading text-center">
                        <h3 class="panel-title"><strong>Usuarios</strong></h3>
                    </div>
                    <div class="panel-body text-center">
                        <i class="fa fa-user fa-3x" aria-hidden="true"></i>
                        <p><strong>Administrar Usuarios</strong></p>
                    </div>
                    <div class="panel-footer text-center">
                        <a href="@Url.Action("Index", "Usuario")" class="btn btn-info">
                            <i class="fa fa-user"></i>   Más info
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-xs-6">
                <div class="panel panel-danger">
                    <div class="panel-heading text-center">
                        <h3 class="panel-title"><strong>Auditoría</strong></h3>
                    </div>
                    <div class="panel-body text-center">
                        <i class="fa fa-search-plus fa-3x" aria-hidden="true"></i>
                        <p><strong>Auditoría Clientes</strong></p>
                    </div>
                    <div class="panel-footer text-center">
                        <a href="@Url.Action("Index", "AuditoriaCliente")" class="btn btn-danger">
                            <i class="fa fa-search-plus"></i>   Más info
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-xs-6">
                <div class="panel panel-warning">
                    <div class="panel-heading text-center">
                        <h3 class="panel-title"><strong>DOC - API REST</strong></h3>
                    </div>
                    <div class="panel-body text-center">
                        <i class="fa fa-file-text-o fa-3x" aria-hidden="true"></i>
                        <p><strong>API REST - Documentación</strong></p>
                    </div>
                    <div class="panel-footer text-center">
                        <a href="@Url.Action("Index", "Documentacion")" class="btn btn-warning">
                            <i class="fa fa-cutlery"></i>   Más info
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>











