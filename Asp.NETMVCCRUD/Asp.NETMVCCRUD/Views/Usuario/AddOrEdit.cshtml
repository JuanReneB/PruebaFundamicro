@model Asp.NETMVCCRUD.Models.usuarios

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Usuario", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", autocomplete = "off" }))
{
    @Html.HiddenFor(model => model.usuarioId)

    <div class="form-group">
        @Html.LabelFor(model => model.nombre, new { @class = "control-label", @style = "text-transform: capitalize;" })
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese su nombre", type = "text" } })
        </div>
        @Html.ValidationMessageFor(model => model.nombre)
    </div>

    <div class="form-group">
        @Html.Label("Correo:", new { @class = "control-label" }) <!-- Modificado para agregar ':' -->
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese su correo", type = "email" } })
        </div>
        @Html.ValidationMessageFor(model => model.correo)
    </div>

    <div class="form-group">
        @Html.Label("Usuario:", new { @class = "control-label" }) <!-- Modificado para agregar ':' -->
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-id-card"></i></span>
            @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese su usuario", type = "text" } })
        </div>
        @Html.ValidationMessageFor(model => model.user_name)
    </div>

    <div class="form-group">
        @Html.Label("Contraseña:", new { @class = "control-label" }) <!-- Modificado para agregar ':' -->
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-unlock"></i></span>
            @Html.EditorFor(model => model.clave, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese su contraseña", type = "password" } })
        </div>
        @Html.ValidationMessageFor(model => model.clave)
    </div>

    <div class="modal-footer">
        <div class="text-end">
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
                <input type="reset" value="Restablecer" class="btn btn-secondary" />
            </div>

            </div>
        </div>
  }
